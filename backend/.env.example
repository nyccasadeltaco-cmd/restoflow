# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=restfolow
DB_SSL=false
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Supabase Auth (server)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRATION=30d

# Multi-tenant
TENANT_HEADER=x-tenant-id

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_DESTINATION=./uploads

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@restfolow.com

# Payment Gateway (opcional)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
DEFAULT_TAX_RATE=0.08875

# Frontend URLs
FRONTEND_CLIENT_URL=http://localhost:8080
FRONTEND_RESTAURANT_URL=http://localhost:8081
FRONTEND_MASTER_URL=http://localhost:8082

# CORS
CORS_ORIGINS=http://localhost:8080,http://localhost:8081,http://localhost:8082
